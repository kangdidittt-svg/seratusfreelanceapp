# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
# For local MongoDB: mongodb://localhost:27017/freelance-tracker
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/freelance-tracker

# Next.js Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secret-key-minimum-32-characters-long
NEXTAUTH_URL=https://your-domain.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# Environment
NODE_ENV=production

# Email Configuration (Optional - for notifications)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# File Upload Configuration (Optional - for profile pictures)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Security Headers (Optional)
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# Rate Limiting (Optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_MAX_AGE=2592000
SESSION_UPDATE_AGE=86400